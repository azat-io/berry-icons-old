{
  "extends": "@logux/eslint-config/ts",
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          ["type"],
          ["builtin", "external"],
          ["internal"],
          ["parent", "sibling", "index"]
        ],
        "pathGroups": [
          {
            "pattern": "~/**",
            "group": "internal"
          }
        ],
        "newlines-between": "always"
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  }
}
